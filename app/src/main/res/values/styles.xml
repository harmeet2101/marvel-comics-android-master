<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- detail header text style -->
    <style name="TextAppearance"/>
    <style name="TextAppearance.Detail" />
    <style name="TextAppearance.Detail.Header" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/detail_content_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Detail.Content" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/detail_content_text_size</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

</resources>
